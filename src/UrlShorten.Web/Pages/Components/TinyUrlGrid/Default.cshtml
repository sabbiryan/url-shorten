@using Microsoft.AspNetCore.Routing
@model System.Collections.Generic.List<UrlShorten.Service.TinyUrls.Dto.UrlMapOutput>

<h4>
    Tiny Urls
    <span class="">
        <a class="btn btn-outline-info" asp-area="" asp-page="/CreateTinyUrl">Create</a>
    </span>
</h4>
<div class="row">
    <div class="col-sm-12">
        <table class="table table-striped table-hover">
            <thead>
            <tr>
                <th>Title</th>
                <th>Description</th>
                <th>Shorten URL</th>
                <th>Original URL</th>
                <th>Click</th>
                <th>Action</th>
            </tr>
            </thead>
            <tbody>

            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Title</td>
                    <td>@item.Description</td>
                    <td>@item.ShortenUrl</td>
                    <td>@item.RawUrl</td>
                    <td>@item.HitCount</td>
                    <td>
                        <a class="text-center" asp-area="" asp-page="/EditTinyUrl" asp-route-id="@item.Id">Edit</a>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>
