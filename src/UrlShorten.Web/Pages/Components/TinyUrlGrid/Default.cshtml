@using Microsoft.AspNetCore.Routing
@model UrlShorten.Service.TinyUrls.Dto.UrlMapPageOutput

<h4>
    Tiny Urls
    @*<a class="btn btn-outline-info" asp-area="" asp-page="/TinyUrl/CreateTinyUrl">Create</a>*@
</h4>
<h6>
    <code>Grid loaded view .net core view component</code>
</h6>
<div class="row">
    <div class="col-sm-12">
        <table class="table table-striped table-hover">
            <thead>
            <tr>
                <th>Title</th>
                <th>Description</th>
                <th>Shorten URL</th>
                <th>Original URL</th>
                <th>Click</th>
                @*<th>Action</th>*@
            </tr>
            </thead>
            <tbody>

            @foreach (var item in Model.Items)
            {
                <tr>
                    <td>@item.Title</td>
                    <td>@item.Description</td>
                    <td>@item.ShortenUrlView</td>
                    <td>@item.RawUrl</td>
                    <td>@item.HitCount</td>
                    @*<td>
                        <a class="text-center" asp-area="" asp-page="/TinyUrl/EditTinyUrl" asp-route-id="@item.Id">Edit</a>
                    </td>*@
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>
